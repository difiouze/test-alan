{
  "components/emthemes-modez/newsletter/popup-banner": "{{#if banners.top_metadata}}\r\n    {{#each banners.top_metadata}}\r\n        {{#if (occurrences this.content 'emthemesModezBannersBlockNewsletterPopup') '>' 0}}\r\n            {{{this.content}}}\r\n        {{/if}}\r\n    {{/each}}\r\n{{/if}}\r\n<form id=\"newsletterPopup-form\" class=\"form\" action=\"{{urls.subscribe.action}}\" method=\"post\">\r\n    <fieldset class=\"form-fieldset\">\r\n        <input type=\"hidden\" name=\"action\" value=\"subscribe\">\r\n        <input type=\"hidden\" name=\"nl_first_name\" value=\"bc\">\r\n        <input type=\"hidden\" name=\"check\" value=\"1\">\r\n        <div class=\"form-field\">\r\n            <label class=\"form-label is-srOnly\" for=\"nl_email\">{{lang 'common.email_address'}}</label>\r\n            <div class=\"form-prefixPostfix wrap\">\r\n                <input class=\"form-input form-prefixPostfix-input\" id=\"nl_email\" name=\"nl_email\" type=\"email\" value=\"{{customer.email}}\"\r\n                    placeholder=\"{{lang 'newsletter.email_placeholder'}}\">\r\n                <input class=\"button form-prefixPostfix-button--postfix\" type=\"submit\" value=\"{{lang 'newsletter.subscribe_submit'}}\">\r\n            </div>\r\n        </div>\r\n        <div class=\"form-field\">\r\n            <input type=\"checkbox\" class=\"form-checkbox\" name=\"hide\" id=\"newsletterPopup-input-hide\" value=\"1\" />\r\n            <label class=\"form-label {{class}}\" for=\"newsletterPopup-input-hide\">{{lang 'newsletter.hide_popup_msg'}}</label>\r\n        </div>\r\n    </fieldset>\r\n</form>\r\n"
}