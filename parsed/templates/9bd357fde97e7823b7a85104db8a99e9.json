{
  "components/emthemes-modez/sections/section-categories-grid": "{{!--\r\nArguments:\r\n    - categories (array)\r\n    - limit (number)\r\n    - style (string)\r\n--}}\r\n<h2 class=\"emthemesModez-categoriesGrid-heading {{#if style}}emthemesModez-categoriesGrid-heading--{{style}}{{/if}}\"><span>{{lang 'emthemesmodez.categories_grid.heading'}}</span></h2>\r\n<section class=\"emthemesModez-categoriesGrid-section {{#if style}}emthemesModez-categoriesGrid-section--{{style}}{{/if}}\">\r\n    <ul class=\"emthemesModez-categoriesGrid\">\r\n        {{#each (limit categories limit)}}\r\n        <li class=\"emthemesModez-categoriesGrid-item\">\r\n            <article class=\"emthemesModez-categoriesGrid-card\">\r\n                {{#if image}}\r\n                <figure class=\"emthemesModez-categoriesGrid-figure\">\r\n                    <a href=\"{{url}}\"><img class=\"emthemesModez-categoriesGrid-image\" src=\"{{getImage image 'category_card_size'}}\" alt=\"{{name}}\" /></a>\r\n                    <figcaption>\r\n                        <div class=\"figcaption-body\"></div>\r\n                    </figcaption>\r\n                </figure>\r\n                {{/if}}\r\n                <div class=\"emthemesModez-categoriesGrid-body\">\r\n                    <h4 class=\"emthemesModez-categoriesGrid-name\">\r\n                        {{name}}\r\n                    </h4>\r\n                    <div class=\"emthemesModez-categoriesGrid-productsCount\">\r\n                        {{lang 'emthemesmodez.categories_grid.products_count' count=count}}\r\n                    </div>\r\n                </div>\r\n            </article>\r\n        </li>\r\n        {{/each}}\r\n    </ul>\r\n</section>\r\n"
}